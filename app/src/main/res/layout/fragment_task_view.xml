<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.fragments.TaskViewFragment">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/taskCard"
        style="?attr/materialCardViewFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Task Title -->
            <TextView
                android:id="@+id/taskTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Title"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <!-- Description -->
            <TextView
                android:id="@+id/taskDescriptionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Task Description"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="?attr/colorOutline" />

            <!-- Priority + Due Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/taskDueDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Due: 14 Oct 2025"
                    android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                    android:textColor="?attr/colorPrimary" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/taskPriorityChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Priority: 3" />
            </LinearLayout>

            <!-- Status Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/taskStatusChip"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="In Progress"
                android:textColor="?attr/colorOnSecondaryContainer"
                app:chipBackgroundColor="?attr/colorSecondaryContainer" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>